<!-- BEGIN PAGE CONTENT-->
<div class="row-fluid">
    <div class="span12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <h4><i class="icon-edit"></i>My Orders</h4>



            </div>
            <div class="portlet-body">
                <div class="clearfix">

                    <div class="btn-group actions">
                        <button data-action="add-order-manually" class="btn green">
                        Add Order <i class="icon-plus"></i>
                        </button>
                        &nbsp;
                        <button data-action="add-order-csv" class="btn green">
                        Upload CSV <i class="icon-plus"></i>
                        </button>
                    </div>



                    <div id="holder_add_order"></div>
                </div>

                <hr/>

                <table class="table table-striped table-bordered" id="main_table">
                    <thead>
                        <tr>
                            <th>PO_NUM</th>
                            <th>Description</th>
                            <th>Requested By</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each orders}}
                        <tr class="">
                            <td>{{this.po_num}}</td>
                            <td>{{this.description}}</td>
                            <td>{{this.requested_by}}</td>
                            <td>{{this.status}}</td>
                            <td>{{this.created_at}}</td>
                            <td>{{this.updated_at}}</td>
                            <td>
                                {{#if this.received}}
                                    Delivered <a href="javascript:;" data-action="update-order-status" data-order_id="{{this.id}}" class="btn red mini">Undo</a>
                                {{else}}
                                    <a href="#" data-action="update-order-status" data-order_id="{{this.id}}"  class="btn green mini">Confirm Delivery</a>
                                {{/if}}
                                <div class="clearfix"></div>
                                <a data-order_status="{{this.status}}" data-order_id="{{this.id}}" data-action="view-order-detail" href="javascript:;" class="btn blue mini">Order Details</a>

                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>



            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
<!-- END PAGE CONTENT -->
