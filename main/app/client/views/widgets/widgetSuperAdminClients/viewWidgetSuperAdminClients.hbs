<div class="row-fluid">
  <div class="span12">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet box red widget-themis">
      <div class="portlet-title">
        <h4><i class="icon-globe"></i>VoxTracker Clients</h4>

        {{# if false}}
        <div class="tools">
          <a href="javascript:;" class="collapse"></a>
          <a href="#portlet-config" data-toggle="modal" class="config"></a>
          <a href="javascript:;" class="reload"></a>
          <a href="javascript:;" class="remove"></a>
        </div>
        {{/ if }}

      </div>
      <div class="portlet-body">

        <div class="clearfix" id="holder_add_client"></div>

        <div class="clearfix">
          <div class="btn-group">
            <button id="add_client" class="btn green">
            Add New <i class="icon-plus"></i>
            </button>
          </div>

          {{# if false}}

          <div class="btn-group pull-right">
            <button class="btn dropdown-toggle" data-toggle="dropdown">Tools <i class="icon-angle-down"></i>
            </button>
            <ul class="dropdown-menu">
              <li><a href="#">Print</a></li>
              <li><a href="#">Save as PDF</a></li>
              <li><a href="#">Export to Excel</a></li>
            </ul>
          </div>

          {{/ if }}

        </div>
        <table id="vox_clients" class="table table-striped table-bordered table-hover" >
          <thead>
            <tr>
              <th>Name</th>
              <th>Primary Email</th>
              <th>Date Added</th>
              <th>Date Updated</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
{{# if false}}
            {{#each clients}}
            <tr class="odd gradeX">
              <td>{{this.name}}</td>
              <td>{{standardDateTime this.created_at}}</td>
              <td>{{standardDateTime this.updated_at}}</td>
              <td>
                  <a href="javascript:;" data-action="view_client_users">View Users</a>
              </td>
            </tr>

{{# if false}}

            <tr>
              <td colspan="4" style="padding:10px;">

                <h5>{{this.name}} Users</h5>

                <table class="table table-striped table-bordered table-hover" id="sample_1">
                    <tbody>

                        {{#each this.users}}
                        <tr class="odd gradeX">
                          <td>{{this.first_name}} {{this.last_name}}</td>
                          <td>{{this.email}}</td>
                          <td>{{this.type}}</td>
                          <td>{{standardDate this.created_at}}</td>
                          <td>{{standardDate this.updated_at}}</td>
                          <td>
                            <a href="#" data-action="delete" data-user_id="{{this.id}}" class="btn red mini">Delete</a>
                          </td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>

              </td>
            </tr>
{{/ if}}

            {{/each}}
{{/ if}}

          </tbody>
        </table>
      </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
  </div>
</div>
