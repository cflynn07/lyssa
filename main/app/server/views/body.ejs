<body
    data-ng-class = "{true: 'login', false:'fixed-top'}[((rootStatus == 'loading' || rootStatus == 'login') && !quizMode)]"
    class         = "login">


<div
  data-ng-switch = "quizMode">

  <div
    data-ng-switch-when = "true"
    data-ng-include     = "'viewCore'">
  </div><!-- quizmode = true -->


  <div
    data-ng-switch-when = "false">

    <div
      data-ng-switch="rootStatus">

      <div
        data-ng-switch-when="loading">
        <div class="logo"></div>
          <div class="content portlet box blue widget-themis-finish">
            <div class="portlet-title">
              <h4 style="color:#FFF;"><i class="icon-plus"></i>Themis v0.1</h4>
            </div>
            <div class="portlet-body">
            <div class="progress progress-striped active">
              <div id="pre_loading_bar" style="width: 100%;" class="bar"></div>
            </div>
            <h4><i
              style         = "color: {{ loadingStatusColor }}"
              data-ng-class = "loadingStatusIcon"
              class         = "icon-cog"></i>&nbsp;<span data-ng-bind-template = "{{ loadingStatus }}">Loading...</span></h4>
          </div>
        </div>
      </div>

      <div
        data-ng-switch-when="login"
        data-ng-include="'viewWidgetCoreLogin'"></div>
      <div
        data-ng-switch-when="authenticated"
        data-ng-include="'viewCore'"></div>

    </div>

  </div><!-- quizmode = false -->

</div>



    <% if(assetHash == 'client'){ %>

    <script async type="text/javascript" data-main="/client" src="vendor/require.js"></script>

    <% }else{ %>

    <script async type="text/javascript" src="/assets/<%= assetHash %>.js"></script>

    <% } %>

</body>
