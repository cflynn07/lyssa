<body ng-class="{loading: 'login', login: 'login', authenticated:'fixed-top'}[rootStatus]" class="login">


     <div data-ng-switch="rootStatus">

         <div data-ng-switch-when="loading">
            <div class="logo"></div>
                <div class="content portlet box blue widget-themis-nofade">
                <div class="portlet-title">
                    <h4 style="color:#FFF;"><i class="icon-plus"></i>Themis v0.1</h4>
                </div>
                <div class="portlet-body">
                    <div class="progress progress-striped active">
                        <div id="pre_loading_bar" style="width: 100%;" class="bar"></div>
                    </div>
                    <h4 data-ng-bind-template="{{loadingStatus}}">Loading...</h4>
                </div>
            </div>
         </div>

         <div data-ng-switch-when="login"         data-ng-include="'viewWidgetCoreLogin'"></div>
         <div data-ng-switch-when="authenticated" data-ng-include="'viewCore'"></div>

     </div>


     <script async type="text/javascript" data-main="/client" src="vendor/require.js"></script>

</body>
